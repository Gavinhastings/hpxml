	</xs:element>
	<xs:element name="MaintainProjecttResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="BuildingID" type="SystemIdentifiersInfoType"/>
				<xs:element minOccurs="0" name="RetrofitID" type="SystemIdentifiersInfoType"/>
				<xs:element maxOccurs="unbounded" name="StatusMessages" type="StatusMessage"
